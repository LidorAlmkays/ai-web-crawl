{
  "dashboard": {
    "id": null,
    "title": "Observability Stack Overview",
    "tags": ["observability", "task-manager", "tempo", "prometheus", "loki"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"task-manager\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Web Crawl Tasks - New",
        "type": "stat",
        "targets": [
          {
            "expr": "task_manager_web_crawl_new_tasks_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Web Crawl Tasks - Completed",
        "type": "stat",
        "targets": [
          {
            "expr": "task_manager_web_crawl_completed_tasks_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 4,
        "title": "Web Crawl Tasks - Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "task_manager_web_crawl_error_tasks_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 }
      },
      {
        "id": 5,
        "title": "Task Processing Rate (Last 5 minutes)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(task_manager_web_crawl_new_tasks_total[5m])",
            "legendFormat": "New Tasks/sec",
            "refId": "A"
          },
          {
            "expr": "rate(task_manager_web_crawl_completed_tasks_total[5m])",
            "legendFormat": "Completed Tasks/sec",
            "refId": "B"
          },
          {
            "expr": "rate(task_manager_web_crawl_error_tasks_total[5m])",
            "legendFormat": "Error Tasks/sec",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 18, "x": 6, "y": 8 }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 20 }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 16 }
      },
      {
        "id": 7,
        "title": "Kafka Consumer Lag",
        "type": "stat",
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 100 }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 16 }
      },
      {
        "id": 8,
        "title": "Redis Memory Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1000000000 },
                { "color": "red", "value": 2000000000 }
              ]
            },
            "unit": "bytes"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 }
      },
      {
        "id": 9,
        "title": "Application Logs (Last 100 entries)",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"task-manager\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true
        },
        "gridPos": { "h": 12, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 10,
        "title": "Recent Traces",
        "type": "traces",
        "targets": [
          {
            "query": "",
            "queryType": "traceql",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showTraceID": true,
          "showSpanID": true,
          "showOperationName": true,
          "showServiceName": true,
          "showDuration": true
        },
        "gridPos": { "h": 12, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 11,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 }
      },
      {
        "id": 12,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_bucket[5m])",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": [],
    "annotations": {
      "list": []
    },
    "templating": {
      "list": []
    }
  }
}
